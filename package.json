{
  "name": "simplecss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "sass": "scss/simplecss.scss",
  "scripts": {
    "start": "npm-run-all --parallel watch docs-serve",
    "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
    "css-lint": "npm-run-all --aggregate-output --continue-on-error --parallel css-lint-*",
    "css-lint-stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-var": "fusv scss/ docs/assets/scss/",
    "css-compile": "sass --style=expanded --source-map --embed-sources --no-error-css scss/:dist/css/",
    "css-rtl": "cross-env NODE_ENV=RTL postcss --config build/postcss.config.js --dir \"dist/css\" --ext \".rtl.css\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*.rtl.css\"",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*.rtl.css\"",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "docs-serve": "echo \"docs serve\"",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-source": "nodemon --watch scss/ --ext scss --exec \"npm-run-all css-lint css-compile css-prefix\"",
    "watch-css-dist": "nodemon --watch dist/css/ --ext css --ignore \"dist/css/*.rtl.*\"  --exec \"npm-run-all css-rtl\"",
    "build": "npm-run-all --aggregate-output --parallel css"
  },
  "keywords": [],
  "author": "byodian",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "clean-css-cli": "^5.6.1",
    "cross-env": "^7.0.3",
    "find-unused-sass-variables": "^4.0.5",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "rtlcss": "^4.0.0",
    "sass": "^1.56.2",
    "stylelint": "^14.16.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0"
  }
}
