{
  "name": "simplecss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "sass": "scss/simplecss.scss",
  "scripts": {
    "start": "npm-run-all --parallel watch docs-serve",
    "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
    "css-lint": "npm-run-all --aggregate-output --continue-on-error --parallel css-lint-*",
    "css-lint-stylelint": "stylelint \"**/*.scss\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-var": "fusv scss/",
    "css-compile": "sass --style=expanded --source-map --embed-sources --no-error-css scss/:dist/",
    "css-rtl": "cross-env NODE_ENV=RTL postcss --config postcss.config.js --dir \"dist\" --ext \".rtl.css\" \"dist/*.css\" \"!dist/*.min.css\" \"!dist/*.rtl.css\"",
    "css-minify": "cross-env NODE_ENV=production postcss --config postcss.config.js --dir \"dist\" --ext \".min.css\" \"dist/*.css\" \"!dist/*.min.css\" ",
    "css-prefix": "postcss --config postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\" \"!dist/*.rtl.css\"",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-source": "nodemon --watch scss/ --ext scss --exec \"npm-run-all css-lint css-compile css-prefix\"",
    "watch-css-dist": "nodemon --watch dist/ --ext css --ignore \"dist/*.rtl.*\" --exec \"npm-run-all css-rtl\"",
    "build": "npm-run-all --aggregate-output --parallel css",
    "docs-serve": "cross-env NODE_ENV=DOCS eleventy --serve --port=8081",
    "docs-build": "cross-env NODE_ENV=DOCS eleventy"
  },
  "keywords": [],
  "author": "byodian",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "autoprefixer": "^10.4.13",
    "clean-css-cli": "^5.6.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "eleventynano-plugin-postcss": "^0.0.2",
    "find-unused-sass-variables": "^4.0.5",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^10.1.0",
    "postcss-map-get": "^0.3.0",
    "postcss-nested": "^6.0.0",
    "postcss-scss": "^4.0.6",
    "postcss-sort-media-queries": "^4.3.0",
    "rtlcss": "^4.0.0",
    "sass": "^1.56.2",
    "stylelint": "^14.16.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0"
  }
}
